<section class="toddyapp">
  <header class="header">
    <h1>toddys todos</h1>
  </header>

  <section class="main">
    <ul class="toddy-list">

    </ul>
  </section>
</section>

<script>
  $(function() {
    $.get("/tasks").success( function( data ) {
      var htmlString = "";

      $.each(data, function(index, task) {
        var liElement = '<li><div class="view"><input class="toggle" type="checkbox"><label>' +
          task.title +
          '</label></div></li>';
        htmlString += liElement;
      });
      var ulToddy = $('.toddy-list');
      ulToddy.html(htmlString);
    });
  });
</script>